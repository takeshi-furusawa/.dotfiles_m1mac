" cursor always center after search
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap J mzJ'z

" Split window
map ss :split<Return><C-w>w
map sv :vsplit<Return><C-w>w

"" Move window
map <Space> <C-w>w
map s<left> <C-w>h
map s<up> <C-w>k
map s<down> <C-w>j
map s<right> <C-w>l
map sh <C-w>h
map sk <C-w>k
map sj <C-w>j
map sl <C-w>l
